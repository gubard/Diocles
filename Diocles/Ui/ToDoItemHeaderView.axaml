<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ip="https://github.com/MahApps/IconPacks.Avalonia"
             xmlns:h="clr-namespace:Diocles.Helpers"
             xmlns:ui="clr-namespace:Diocles.Ui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Diocles.Ui.ToDoItemHeaderView"
             x:DataType="ui:ToDoItemHeaderViewModel">
    <Panel>
        <Grid ColumnDefinitions="Auto,*,Auto">
            <StackPanel Classes="horizontal">
                <ToggleButton Content="{ip:MaterialDesign Checklist}" IsChecked="{Binding IsMulti}" />
                <Button Content="{ip:MaterialDesign ArrowForward}"
                        Command="{x:Static h:DioclesCommands.OpenCurrentToDoCommand}" />
            </StackPanel>

            <ScrollViewer Grid.Column="1" Classes="horizontal-scroll">
                <TextBlock Classes="h2 align-left-center" Text="{Binding Item.Name}" />
            </ScrollViewer>

            <ContentControl Grid.Column="2" IsVisible="{Binding !IsMulti}" Content="{Binding Commands}" />
            <ContentControl Grid.Column="2" IsVisible="{Binding IsMulti}" Content="{Binding MultiCommands}" />
        </Grid>

        <Grid DataContext="{Binding Item}" Classes="for-drop" ColumnDefinitions="*,*">
            <Panel Tag="DropUp">
                <Rectangle Classes="drop-aria" />
                <TextBlock Classes="align-center m-10" Text="{DynamicResource Lang.Up}" />
            </Panel>

            <Panel Grid.Column="1" Tag="DropDown">
                <Rectangle Classes="drop-aria" />
                <TextBlock Classes="align-center m-10" Text="{DynamicResource Lang.Down}" />
            </Panel>
        </Grid>
    </Panel>
</UserControl>