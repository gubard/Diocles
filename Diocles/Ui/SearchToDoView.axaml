<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Diocles.Ui"
             xmlns:c="clr-namespace:Inanna.Controls;assembly=Inanna"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Diocles.Ui.SearchToDoView"
             x:DataType="ui:SearchToDoViewModel">
    <Grid RowDefinitions="Auto,*,Auto">
        <StackPanel>
            <TextBlock Classes="field" Text="{DynamicResource Lang.SearchText}" />
            <TextBox x:Name="SearchTextTextBox" Text="{Binding SearchText}" />
            
            <TextBlock Classes="field" Text="{DynamicResource Lang.Type}" />
            <c:EnumsSelectorControl  SelectedEnums="{Binding Types}"/>
        </StackPanel>

        <ContentControl Grid.Row="1" Content="{Binding List}" />
        <Button Grid.Row="2"
                Classes="align-stretch content-align-center h1"
                IsDefault="True"
                Content="{DynamicResource Lang.Search}"
                Command="{Binding SearchCommand}" />
    </Grid>
</UserControl>