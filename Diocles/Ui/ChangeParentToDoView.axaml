<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Diocles.Ui"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Diocles.Ui.ChangeParentToDoView"
             x:DataType="ui:ChangeParentToDoViewModel">
    <Grid RowDefinitions="Auto,*">
        <ToggleButton Content="{DynamicResource Lang.IsRoot}" IsChecked="{Binding IsRoot}" />
        <ContentControl Grid.Row="1" IsEnabled="{Binding !IsRoot}" Content="{Binding Tree}" />
    </Grid>
</UserControl>