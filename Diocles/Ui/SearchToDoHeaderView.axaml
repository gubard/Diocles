<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:ui="clr-namespace:Diocles.Ui"
             xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
             xmlns:h="clr-namespace:Diocles.Helpers"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Diocles.Ui.SearchToDoHeaderView"
             x:DataType="ui:SearchToDoHeaderViewModel">
    <Grid ColumnDefinitions="Auto,*,Auto">
        <StackPanel Classes="horizontal">
            <ToggleButton Content="{iconPacks:MaterialDesign Checklist}" IsChecked="{Binding IsMulti}" />
            <Button Content="{iconPacks:MaterialDesign ArrowForward}"
                    Command="{x:Static h:DioclesCommands.OpenCurrentToDoCommand}" />
        </StackPanel>

        <TextBlock Grid.Column="1" Classes="h2 align-left-center" Text="{DynamicResource Lang.SearchToDos}" />

        <StackPanel Grid.Column="2">
            <ItemsControl Classes="horizontal-stack"
                          IsVisible="{Binding IsMulti}"
                          ItemsSource="{Binding MultiCommands}" />
        </StackPanel>
    </Grid>
</UserControl>